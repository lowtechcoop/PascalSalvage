{   TEST PROGRAM  .. cut }

Uses Crt,Mods;
 var ch : char;
begin
 Device:=dvDacLPTs;
 MixSpeed:=15909; {10000;}
 WriteLn(PlayMod('NIAGRA.MOD'));
 repeat
  ch:=ReadKey; if ch=#0 then ch:=ReadKey;
  Case ch of
   #43 :  begin Inc(Volume); SetVolume(Volume); end; {Серый плюс}
   #45 :  begin Dec(Volume); SetVolume(Volume); end; {Серый минус}
   #42 :  begin Volume:=255; SetVolume(Volume); end; {Серая звездочка MAX}
  end;
 until ch in [#27];
 StopMod;
end.
